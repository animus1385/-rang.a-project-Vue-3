{
    "compilerOptions": {
        "outDir": "./dist/",
        "composite": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "target": "ES5",
        "jsx": "preserve",
        "module": "ESNext",
        "allowJs": true,
        "strict": false,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/ui/*": ["./src/ui/*"],
            "@/assets/*": ["./src/assets/*"],
            "@/interface/*": ["./src/interface/*"],
        },
    },
    "exclude": ["**/*.test.ts", "node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        },
    },
    "include": ["**/*.ts", "**/*.vue"],
}
